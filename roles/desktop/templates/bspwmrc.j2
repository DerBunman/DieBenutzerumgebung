#! /bin/sh

sxhkd &

bspc monitor -d 1 2 3 4 5 6 7 8 9 0

# Color of the border of an unfocused window.
bspc config normal_border_color "#484848"
# Color of the border of a focused window of an unfocused monitor.
bspc config active_border_color "#dea65f"
# Color of the border of a focused window of a focused monitor.
bspc config focused_border_color "#8abeb7"
# Color of the node --presel-{dir,ratio} message feedback area.
bspc config presel_feedback_color "#8abeb7"


bspc config border_width 2
bspc config window_gap 0
bspc config top_padding 0
bspc config right_padding 0
bspc config bottom_padding 0
bspc config left_padding 0

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

#bspc rule -a Gimp desktop='^8' state=floating follow=on
bspc rule -a Chromium desktop='^2'
bspc rule -a Screenkey manage=off
bspc rule -a mpv state=floating
bspc rule -a mplayer2 state=floating

bspc rule -a scratchpad_gvim sticky=on state=floating hidden=on
bspc rule -a scratchpad sticky=on state=floating hidden=on
bspc rule -a pavucontrol sticky=on state=floating hidden=on

# for the scratchpads
pavucontrol &
gvim --class scratchpad_gvim &


"$HOME/bin/compton-invert" &

eval $(gnome-keyring-daemon) &
xscreensaver -nosplash &
xset m 0 0 &
/usr/lib/gnome-settings-daemon &
~/bin/autostart/000_100hz.sh &
~/bin/i3-autostart.zsh ~/bin/autostart/always &
~/bin/xkeys.zsh &

polybar --reload bspwm --config="$HOME/.config/polybar/config" &

