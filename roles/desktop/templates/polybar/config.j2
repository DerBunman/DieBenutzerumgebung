outer-border = ${xrdb:color0:#ff0000}

[bar/bspwm]
width = 100%
height = 28
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false

bottom = {{ polybar__bottom | default(true) }}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.red}

border-size = 1
border-color = ${colors.outer-border}
border-left-size = 0
border-right-size = 0
border-bottom-size = 0

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "Roboto:style=Regular:size=10"
font-1 = "Roboto:style=Italic:size=10"
font-2 = "Roboto:style=Bold:size=10"
font-3 = "Roboto:style=Black:size=10"
font-4 = "RobotoMono:size=10"
font-5 = "RobotoMono Nerd Font:style=Regular:size=12:antialias=true;1"
font-6 = "RobotoMono Nerd Font:style=Solid:size=12:antialias=true;1"

monitor = ${env:MONITOR:}

modules-left = bspwm {{ polybar__modules_left }}
modules-center = {{ polybar__modules_center }}
modules-right = {{ polybar__modules_right }}

tray-position = right
tray-padding = 1
tray-background = ${colors.background}

wm-restack = bspwm

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
scroll-up = bspc desktop -f prev.occupied
scroll-down = bspc desktop -f next.occupied

cursor-click = pointer
cursor-scroll = default


