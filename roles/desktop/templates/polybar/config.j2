[colors]
yellow = ${xrdb:color3:#ffff00}
red = ${xrdb:color1:#ff0000}
blue = ${xrdb:color4:#0000ff}
green = ${xrdb:color2:#00ff00}

# BG color
foreground = ${xrdb:color15:#fff}
foreground-alt = ${xrdb:color3:#fff}
background = ${xrdb:background:#000}

# derived colors
alert = ${xrdb:color1:#f00}
