set $mode_default mode default; exec tint_screen.zsh off;
set $exec_tint_blue exec tint_screen.zsh grey;

focus_follows_mouse no
workspace_auto_back_and_forth yes

hide_edge_borders smart

# don't autofocus popups
no_focus [window_role="pop-up"]

mouse_warping none

# doesn't work with ubuntu
#focus_wrapping no


