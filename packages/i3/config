# start a terminal
bindsym $mod+Return exec urxvtcd

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
#bindsym $mod+d exec "rofi -combi-modi drun,run -show combi -modi combi"
#bindsym $mod+d exec "rofi -show run"
bindsym $mod+d exec "rofi -modi window,run,media:~/bin/rofi_media_menu.zsh -show run -sidebar-mode"
bindsym $mod+x exec xscreensaver-command -lock

#                             _                    _                     _
#    ___ ___  _ __ ___  _ __ | |_ ___  _ __       (_)_ ____   _____ _ __| |_
