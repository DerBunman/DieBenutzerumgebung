bindsym $mod+i exec       "sleep .1; compton-invert -As"
bindsym $mod+Shift+i exec "sleep .1; compton-invert -Ds"
# restart compton-invert when restarting i3
exec_always --no-startup-id ~/bin/compton-invert &

