#!/usr/bin/env zsh
# This script will OSD from pipe and $@
#

OSD="aosd_cat \
	--font=RobotoMono\ Nerd\ Font\ 32 \
	-w 0 \
	--transparency=2 \
	--y-offset=50 \
	--padding=10 \
	--position=0 \
	--shadow-offset=3 \
	--fore-color=#dea65f"

{
	[ $# -gt 0 ] && {
		echo "$@" | eval $OSD
	}

	{
		cat | eval $OSD
	}
} &
